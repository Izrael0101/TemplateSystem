@model TemplateSystem.Entity.Models.Login

@{
    Layout = null;
    ViewBag.SystemName = System.Web.Configuration.WebConfigurationManager.AppSettings["SystemName"].ToString();
    ViewBag.Version = System.Web.Configuration.WebConfigurationManager.AppSettings["Version"].ToString();
}

<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.SystemName | Login Page</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <link rel="shortcut icon" href="~/assets/ico/favicon.png" />

    <!-- ================== BEGIN BASE CSS STYLE ================== -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100italic,300,300italic,400,400italic,500,500italic,700,700italic,900,900italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

    @Styles.Render("~/assets/plugins/jquery-ui/jquery-ui.min.css")
    @Styles.Render("~/assets/plugins/bootstrap/4.1.0/css/bootstrap.min.css")
    @Styles.Render("~/assets/plugins/font-awesome/5.0/css/fontawesome-all.min.css")
    @Styles.Render("~/assets/plugins/animate/animate.min.css")
    @Styles.Render("~/assets/css/material/style.css")
    @Styles.Render("~/assets/css/material/style-responsive.css")
    @Styles.Render("~/assets/css/material/theme/default.css")

    @Styles.Render("~/assets/plugins/gritter/css/jquery.gritter.css")
    <!-- ================== END BASE CSS STYLE ================== -->
    <!-- ================== BEGIN BASE JS ================== -->
    @Scripts.Render("~/assets/plugins/pace/pace.min.js")

    <!-- ================== END BASE JS ================== -->

    <script>
        var config = {
            contextPath: '@Url.Content("~")'
        }
    </script>
</head>
<body class="pace-top bg-white">
    <!-- begin #page-loader -->
    <div id="page-loader" class="fade show">
        <div class="material-loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"></circle>
            </svg>
            <div class="message">Loading...</div>
        </div>
    </div>
    <!-- end #page-loader -->
    <!-- begin #page-container -->
    <div id="page-container" class="fade">
        <!-- begin login -->
        <div class="login login-with-news-feed">
            <!-- begin news-feed -->
            <div class="news-feed">
                <div class="news-image" style="background-image: url(@Url.Content("~/assets/img/login-bg/login-bg-11.jpg"))"></div>
                <div class="news-caption">
                    <h4 class="caption-title"><b>TemplateSystem</b> App - Version: @ViewBag.Version</h4>
                    <p>
                        Download the TemplateSystem app for iPhone®, iPad®, and Android™. Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                    </p>
                </div>
            </div>
            <!-- end news-feed -->
            <!-- begin right-content -->
            <div class="right-content">
                <!-- begin login-header -->
                <div class="login-header">
                    <div class="brand">
                        TemplateSystem
                        <small>responsive bootstrap 3 admin template</small>
                    </div>
                    <div class="icon">
                        <i class="fa fa-sign-in"></i>
                    </div>
                </div>
                <!-- end login-header -->
                <!-- begin login-content -->
                <div class="login-content">
                    <form id="frmLogin" class="margin-bottom-0">
                        <div class="form-group m-b-15">
                            <input type="text" id="Username" class="form-control form-control-lg" placeholder="Email Address" required />
                            @*@Html.TextBoxFor(u => u.UserName, new { @placeholder = "Introduce tu usuario", @type = "text", @id = "username", @class = "form-control input-lg", @name = "UserName" })*@
                        </div>
                        <div class="form-group m-b-15">
                            <input type="password" id="Password" class="form-control form-control-lg" placeholder="Password" required />
                            @*@Html.TextBoxFor(u => u.Password, new { @placeholder = "Introduce tu contraseña", @type = "password", @id = "Password", @class = "form-control input-lg", @name = "Password" })*@
                        </div>
                        <div class="checkbox checkbox-css m-b-30">
                            <input type="checkbox" id="remember_me_checkbox" value="" />
                            <label for="remember_me_checkbox">
                                Remember Me
                            </label>
                        </div>
                        <div class="login-buttons">
                            <button type="button" typeof="submit" id="btnLogin" class="btn btn-success btn-block btn-lg">Sign me in</button>
                        </div>
                        <div class="m-t-20 m-b-40 p-b-40 text-inverse">
                            Not a member yet? Click <a href="register_v3.html" class="text-success">here</a> to register.
                        </div>
                        <hr />
                        <p class="text-center text-grey-darker">
                            &copy; TemplateSystem All Right Reserved 2021
                        </p>
                    </form>
                </div>
                <!-- end login-content -->
            </div>
            <!-- end right-container -->
        </div>
        <!-- end login -->
    </div>
    <!-- end page container -->
    <!-- ================== BEGIN BASE JS ================== -->
    @Scripts.Render("~/assets/plugins/jquery/jquery-3.2.1.min.js")
    @Scripts.Render("~/assets/plugins/jquery-ui/jquery-ui.min.js")
    @Scripts.Render("~/assets/plugins/bootstrap/4.1.0/js/bootstrap.bundle.min.js")
    <!--[if lt IE 9]>
        <script src="~/assets/crossbrowserjs/html5shiv.js"></script>
        <script src="~/assets/crossbrowserjs/respond.min.js"></script>
        <script src="~/assets/crossbrowserjs/excanvas.min.js"></script>
    <![endif]-->
    @Scripts.Render("~/assets/plugins/slimscroll/jquery.slimscroll.min.js")
    @Scripts.Render("~/assets/plugins/js-cookie/js.cookie.js")
    @Scripts.Render("~/assets/js/theme/material.min.js")
    @Scripts.Render("~/assets/js/apps.min.js")
    @Scripts.Render("~/assets/plugins/gritter/js/jquery.gritter.js")
    @Scripts.Render("~/assets/js/demo/ui-modal-notification.demo.min.js")

    @Scripts.Render("~/assets/plugins/bootstrap-sweetalert/sweetalert.min.js")
    <!-- ================== END BASE JS ================== -->

    <script>
        $(document).ready(function () {
            App.init();
            Notification.init();

            $('.modal-dialog').draggable({
                handle: ".modal-header"
            });
        });
    </script>

    <script src="@Url.Content("~/Scripts/Account/Login.js")" type="text/javascript"></script>
</body>
</html>